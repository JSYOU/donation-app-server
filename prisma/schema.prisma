datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum CampaignType {
  CHARITY  // 公益團體
  PROJECT  // 捐款專案
  PRODUCT  // 義賣商品
}

model Campaign {
  id          String         @id @default(uuid()) @db.Uuid
  name        String
  description String?
  logoUrl     String?
  category    String?
  type        CampaignType
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}
