datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// 狀態列舉：適用於 CHARITY, PRODUCT, 以及新的 PROJECT
enum Status {
  DRAFT
  ACTIVE
  INACTIVE
  COMPLETED
}

enum CampaignType {
  CHARITY
  PRODUCT
}

model Campaign {
  id          String       @id @default(uuid()) @db.Uuid
  name        String
  description String?
  logoUrl     String?
  category    String[]     @default([])
  type        CampaignType
  status      Status       @default(ACTIVE)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Project {
  id          String     @id @default(uuid()) @db.Uuid
  bannerUrl   String?
  name        String
  category    String[]   @default([])
  description String?
  status      Status     @default(ACTIVE)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
